<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BannerView">
        <!--点的颜色或者背景-->
        <attr name="dotIndicatorFocus" format="color|reference"/>
        <attr name="dotIndicatorNormal" format="color|reference"/>
        <!--点的大小-->
        <attr name="dotSize" format="dimension"/>
        <!--点的间距-->
        <attr name="dotDistance" format="dimension"/>
        <!--点的位置-->
        <attr name="dotGrivity" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="-1"/>
            <enum name="right" value="1"/>
        </attr>
        <!--底部的颜色-->
        <attr name="bottomColor" format="color"/>

        <!--宽高比-->
        <attr name="widthPercent" format="float"/>
        <attr name="heightPercent" format="float"/>
        <!--多久切换一次-->
        <attr name="intervalTime" format="integer"/>
        <!--切换时的速度-->
        <attr name="switchTime" format="integer"/>

    </declare-styleable>
    
</resources>